{
  "manifest_version": 3,
  "name": "Assistive Learning Extension",
  "version": "1.0.0",
  "description": "Highlight text, add notes, and enhance accessibility while learning",
  
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Assistive Learning"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ]
}